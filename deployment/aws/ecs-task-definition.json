{
  "family": "digital-twin-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "digital-twin-container",
      "image": "YOUR_ACR_LOGIN_SERVER/digital-twin:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "CHROMA_PERSIST_DIRECTORY",
          "value": "/app/chroma_db"
        },
        {
          "name": "BACKEND_CORS_ORIGINS",
          "value": "https://your-domain.com,https://www.your-domain.com"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:digital-twin/openai-key"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:digital-twin/secret-key"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "chroma-data",
          "containerPath": "/app/chroma_db",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/digital-twin",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "repositoryCredentials": {
        "credentialsParameter": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:acr-credentials"
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "volumes": [
    {
      "name": "chroma-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-YOUR_EFS_ID",
        "rootDirectory": "/digital-twin-data",
        "transitEncryption": "ENABLED"
      }
    }
  ]
}
